		"@upstash/redis": "^1.35.0",
		"dotenv": "^16.5.0",
		"elysia": "^1.3.4",
		"itty-fetcher": "^0.9.4",
		"kysely": "^0.28.2",
		"kysely-neon": "^1.3.0",
		"progress": "^2.0.3",
		"radash": "^12.1.0",
